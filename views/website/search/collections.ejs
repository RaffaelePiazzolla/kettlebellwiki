<!doctype html>
<html lang="en-us">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/media.css">
  <title><%= query %> - Kettlebell Wiki</title>
</head>

<body>
  <%- include('../partials/header') %>

  <main>

    <section id="media-set-section">
      <div class="container-fluid">
        <div class="row">
          <div class="col">

            <%- include('../partials/search_bar', { query, action: '/search/collections', placeholder: 'Search collections' }) %>

            <%- include('../partials/media/collections_list', { collections, options: { displayMode: 'vertical' } }) %>

          </div>
        </div>
        
        <%- include('../partials/pagination', { path: '/search/collections', params: `q=${query}` }) %>

      </div>
    </section>

  </main>

  <%- include('../partials/footer') %>

  
  <script src="/js/media.js"></script>
</body>

</html>