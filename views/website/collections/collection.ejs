<!doctype html>
<html lang="en-us">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/media.css">
  <title><%= capitalize(collection.name) %> - Kettlebell Wiki</title>
</head>

<body>
  <%- include('../partials/header') %>

  <main>

    <section id="media-set-section">
      <div class="container-fluid">
        <div class="row">
          <div class="col">
            <div id="main-collection">
              <h2 class="name"><%= collection.name %></h2>
              <% if (collection.description) { %>
                <p class="description"><%= collection.description %></p>
              <% } %>
              <%- include('../partials/media/videos_list', { videos: collection.videos, options: { displayMode: 'grid' } }) %>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <%- include('../partials/footer') %>

  
  <script src="/js/media.js"></script>
</body>

</html>